{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "groupName": "Patch Updates",
      "matchUpdateTypes": ["patch"]
    },
    {
      "groupName": "Other Updates",
      "matchUpdateTypes": ["minor", "major"]
    }
  ]
}
